# .env example for Jira RAG project

# MongoDB settings
MONGO_URI=mongodb://localhost:27017/
DB_NAME=JiraRepos
COLLECTION_NAME=Apache

# Embedding model and task description
EMBEDDING_MODEL=intfloat/multilingual-e5-large-instruct
TASK_DESCRIPTION=Given a new Jira ticket summary, retrieve relevant historical tickets for triage classification

# FAISS index files
FAISS_INDEX_FILE=jira_index.faiss
INDEX_METADATA_FILE=jira_index_metadata.json
INDEX_PROGRESS_FILE=jira_index_progress.json

# Model settings
GEMINI_API_KEY=
GEMINI_MODEL_NAME=

# Batching
MONGO_BATCH_SIZE=10000
